<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/register"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="151dp"
        android:layout_height="138dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/loginmessage"
        android:src="@drawable/logo" />


    <ImageView
        android:id="@+id/sfrText"
        android:layout_width="103dp"
        android:layout_height="69dp"
        android:layout_below="@+id/logoImage"
        android:layout_alignEnd="@+id/nextButtonRegister"
        android:layout_marginTop="-27dp"
        android:layout_marginEnd="46dp"
        android:contentDescription="@string/loginmessage"
        android:src="@drawable/sfr" />


    <EditText
        android:id="@+id/nameUser"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/sfrText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:hint="@string/name"
        android:background="@drawable/edit_text_shape_states"
        android:inputType="text" />

    <EditText
        android:id="@+id/numberUser"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/nameUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:hint="@string/your_phone_number"
        android:background="@drawable/edit_text_shape_states"
        android:inputType="numberSigned" />


    <EditText
        android:id="@+id/birthdateUser"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/numberUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:editable="false"
        android:background="@drawable/edit_text_shape_states"
        android:hint="@string/your_age" />

    <EditText
        android:id="@+id/locationUser"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/birthdateUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:hint="@string/location"
        android:background="@drawable/edit_text_shape_states"
        android:inputType="text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButtonRegister"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="@string/next"
        android:textAlignment="center"
        android:layout_below="@+id/locationUser"
        android:textSize="15sp"
        app:backgroundTint="#02B875"
        app:cornerRadius="20dp"
        app:strokeColor="#02B875"
        app:strokeWidth="1dp" />

</RelativeLayout>